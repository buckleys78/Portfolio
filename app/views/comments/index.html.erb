<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Approved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commentable.comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.approved %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New Comment", [:new, @commentable, :comment] %>
<%= link_to 'Back', @commentable %>
