<%= form_for([@commentable,@comment]) do |f| %>
  <div class="field">
    <%= f.label :author, "Your name" %>
    <%= f.text_field :author_email %>
  </div>
  <div class="field">
    <%= f.label :author_url, "Your URL" %>
    <%= f.text_field :author_url %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <% if policy(Comment).approve? %>
      <div class="row collapse">
        <div class="small-3 columns">
          <%= f.label :approved, class: "right inline", title: "Approved?", data: {tooltip: true} %></br>
        </div>
        <div class="small-9 columns">
          <%= f.check_box :approved %>
        </div>
      </div>
    <% end %>
  </div>

  <%= f.hidden_field :commentable_id, value: @commentable.id %>

  <div class="actions">
    <%= f.submit "Submit comment for approval" %>
  </div>
<% end %>
