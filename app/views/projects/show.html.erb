<h2><%= @project.name %></h2>

<p>Technologies used: <%= @project.technologies_used %></p>

<p>Attachments: <%= image_tag @project.picture.url(:medium) %></p>

<p>
  <strong>Comments:</strong>
  <table>
    <thead>
      <tr>
        <th>Author</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @project.comments.each do |comment| %>
        <% if policy(comment).show? %>
          <tr>
            <td><%= comment.author %></td>
            <td><%= comment.content %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</p>

<%= link_to 'New Comment', new_project_comment_path(@project) %>
<%= link_to 'Show Comments', project_comments_path(@project) %>
<% if policy(@project).edit? %>
  <%= link_to 'Edit', edit_project_path(@project) %>
<% end %>
<%=link_to 'Back', projects_path %>
